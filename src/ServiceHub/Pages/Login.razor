    private HttpClient _http;

    protected override void OnInitialized()
    {
        _http = _httpClientFactory.CreateClient("API");
    }

    private async Task HandleLogin()
    {
        try
        {
            var response = await _http.PostAsJsonAsync("/api/auth/login", loginModel);

            // var status = __authenticationStateProvider.

            if (response.IsSuccessStatusCode)
            {
                // If login is successful, redirect to the home page or another route
                _navigationManager.NavigateTo("/");
            }
            else
            {
                // If login fails, handle the error
                var errorMessage = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"Login failed: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"An error occurred during login: {ex.Message}");
        }
    }

    public class LoginModel
    {
        [Required]
        public string Email { get; set; }

        [Required]
        public string Password { get; set; }
    }
